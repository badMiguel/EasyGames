@model EasyGames.Models.Shop

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Shop</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ShopName" class="control-label"></label>
                <input asp-for="ShopName" class="form-control" />
                <span asp-validation-for="ShopName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContactNumber" class="control-label"></label>
                <input asp-for="ContactNumber" class="form-control" />
                <span asp-validation-for="ContactNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LocationType" class="control-label"></label>
                <select asp-for="LocationType" class="form-control" asp-items="ViewBag.LocationType"></select>
                <span asp-validation-for="LocationType" class="text-danger"></span>
                <small class="form-text text-muted">
                    <i class="fa-solid fa-info-circle"></i> <strong>Note:</strong> Only one "Online" shop is allowed. Select "Physical" for brick-and-mortar stores.
                </small>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OwnerId" class="control-label">Owner</label>

                @if ((bool?)ViewData["HasAvailableUsers"] == true)
                {
                    <select asp-for="OwnerId" class="form-control" asp-items="ViewBag.OwnerId" required>
                        <option value="">-- Select an owner --</option>
                    </select>
                    <small class="form-text text-muted">
                        <i class="fa-solid fa-info-circle"></i> Only users without an existing shop are shown.
                    </small>
                }
                else
                {
                    <div class="alert alert-warning" role="alert">
                        <h6 class="alert-heading">
                            <i class="fa-solid fa-exclamation-triangle"></i> No Available Users
                        </h6>
                        <p class="mb-2">All existing users already own a shop. Each user can only own one shop.</p>
                        <hr>
                        <p class="mb-0">
                            <strong>To create a new shop:</strong><br>
                            1. <a href="/Identity/Account/Register" class="alert-link">Register a new user account</a><br>
                            2. Return here to assign them as shop owner
                        </p>
                    </div>
                    <select asp-for="OwnerId" class="form-control" disabled>
                        <option value="">-- No users available --</option>
                    </select>
                }
                <span asp-validation-for="OwnerId" class="text-danger"></span>
            </div>

            @if ((bool?)ViewData["HasAvailableUsers"] == true)
            {
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            }
            else
            {
                <div class="form-group">
                    <a href="/Identity/Account/Register" class="btn btn-success">
                        <i class="fa-solid fa-user-plus"></i> Register New User
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            }
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}