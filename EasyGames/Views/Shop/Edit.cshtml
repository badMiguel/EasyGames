@model EasyGames.Models.Shop

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Shop</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ShopId" />

            <div class="form-group">
                <label asp-for="ShopName" class="control-label"></label>
                <input asp-for="ShopName" class="form-control" />
                <span asp-validation-for="ShopName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ContactNumber" class="control-label"></label>
                <input asp-for="ContactNumber" class="form-control" />
                <span asp-validation-for="ContactNumber" class="text-danger"></span>
            </div>

            @if (User.IsInRole(UserRoles.Owner))
            {
                @* Only Owner can edit these fields *@
                <div class="form-group">
                    <label asp-for="LocationType" class="control-label"></label>
                    <select asp-for="LocationType" class="form-control" asp-items="ViewBag.LocationType"></select>
                    <span asp-validation-for="LocationType" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Address" class="control-label"></label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="OwnerId" class="control-label">Owner</label>
                    <select asp-for="OwnerId" class="form-control" asp-items="ViewBag.OwnerId"></select>
                    <span asp-validation-for="OwnerId" class="text-danger"></span>
                </div>
            }
            else
            {
                @* Shop Proprietor will show readonly fields *@
                <input type="hidden" asp-for="LocationType" />
                <input type="hidden" asp-for="Address" />
                <input type="hidden" asp-for="OwnerId" />

                <div class="form-group">
                    <label class="control-label">Location Type</label>
                    <input type="text" class="form-control" value="@Model.LocationType" readonly />
                    <small class="form-text text-muted">
                        <i class="fa-solid fa-lock"></i> Only the owner can change this field.
                    </small>
                </div>

                <div class="form-group">
                    <label asp-for="Address" class="control-label"></label>
                    <input asp-for="Address" class="form-control" readonly />
                    <small class="form-text text-muted">
                        <i class="fa-solid fa-lock"></i> Only the owner can change this field.
                    </small>
                </div>

                <div class="form-group">
                    <label class="control-label">Owner</label>
                    <input type="text" class="form-control" value="@Model.Owner?.UserName" readonly />
                    <small class="form-text text-muted">
                        <i class="fa-solid fa-lock"></i> Only the owner can change this field.
                    </small>
                </div>
            }

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}