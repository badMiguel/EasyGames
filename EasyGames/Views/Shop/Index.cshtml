@using System.Security.Claims
@model IEnumerable<EasyGames.Models.Shop>

@{
    ViewData["Title"] = "Shop List";
}

<h1>Shops</h1>

@* Only Owner can create new shops *@
@if (User.IsInRole(UserRoles.Owner))
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>
}

@await Html.PartialAsync("_PageSizeSelector", ViewData["PageDetails"])

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ShopName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LocationType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Owner.UserName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            @* Owner sees all shops with full controls *@
            if (User.IsInRole(UserRoles.Owner))
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ShopName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LocationType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Owner.UserName)
                    </td>
                    <td>
                        <a asp-controller="Inventory" asp-action="Index" asp-route-shopId="@item.ShopId">View Inventory</a> |
                        <a asp-action="Edit" asp-route-id="@item.ShopId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.ShopId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.ShopId">Delete</a>
                    </td>
                </tr>
                continue;
            }

            @* Shop Proprietor sees only their shop with limited controls *@
            if (User.FindFirst(ClaimTypes.NameIdentifier)?.Value == item.OwnerId)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ShopName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LocationType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Owner.UserName)
                    </td>
                    <td>
                        <a asp-controller="POS" asp-action="Index" asp-route-shopId="@item.ShopId">POS</a> |
                        <a asp-controller="Inventory" asp-action="Index" asp-route-shopId="@item.ShopId">View Inventory</a> |
                        <a asp-action="Edit" asp-route-id="@item.ShopId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.ShopId">Details</a>
                        @* Removed Delete link for Shop Proprietor *@
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

@await Html.PartialAsync("_MovePagePartial", ViewData["PageDetails"])