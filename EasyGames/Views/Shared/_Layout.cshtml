<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EasyGames</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EasyGames.styles.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">EasyGames</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <div class="dropdown custom-dropdown">
                            <button class="btn dropdown-toggle border-0 shadow-none p-2" type="button" id="dropdownMenuButton"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                    Products
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <li><a class="dropdown-item" asp-controller="Home" asp-action="Category" asp-route-name="Books">Books</a></li>
                                <li><a class="dropdown-item" asp-controller="Home" asp-action="Category" asp-route-name="Games">Games</a></li>
                                <li><a class="dropdown-item" asp-controller="Home" asp-action="Category" asp-route-name="Toys">Toys</a></li>
                            </ul>
                        </div>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home"
                                asp-action="Privacy">Privacy</a>
                        </li>
                        
                        @{ 
                            if (User.IsInRole(UserRoles.Owner) || User.IsInRole(UserRoles.ShopProprietor)) 
                            {
                            <!-- FOR OWNER AND SHOP PROPRIETOR ONLY -->
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Shop" asp-action="Index">Shops</a>
                                </li>
                            }

                            if (User.IsInRole(UserRoles.Owner)) 
                            {
                                <!-- FOR OWNER ONLY -->
                                <div class="dropdown custom-dropdown">
                                    <button class="btn dropdown-toggle border-0 shadow-none p-2" type="button" id="dropdownMenuButton"
                                        data-bs-toggle="dropdown" aria-expanded="false">
                                        Items
                                    </button>
                                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                        <li><a class="dropdown-item" asp-controller="Item" asp-action="Index">Item Manager</a></li>
                                        <li><a class="dropdown-item" asp-controller="ItemCategory" asp-action="Index">Item Category Manager</a></li>
                                        <li><a class="dropdown-item" asp-controller="Category" asp-action="Index">Category Manager</a></li>
                                    </ul>
                                </div>
                                <div class="dropdown custom-dropdown">
                                    <button class="btn dropdown-toggle border-0 shadow-none p-2" type="button" id="dropdownMenuButton"
                                        data-bs-toggle="dropdown" aria-expanded="false">
                                            Users
                                    </button>
                                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="Index">User Manager</a></li>
                                        <li><a class="dropdown-item" asp-controller="UserSales" asp-action="Index">User Sales</a></li>
                                        <li><a class="dropdown-item" asp-controller="Email" asp-action="Index">Email Users</a></li>
                                    </ul>
                                </div>
                            }
                        }
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Status" asp-action="Index">My Account</a>
                            </li>
                        }
                    </ul>
                    @await Component.InvokeAsync("CartSummary")
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - EasyGames - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
