@model IEnumerable<EasyGames.Models.ItemCategory>

@{
    ViewData["Title"] = "Item Category";
}

<h1>Item Category</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

@await Html.PartialAsync("_PageSizeSelector", ViewData["PageDetails"])

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Item)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ItemCategoryId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ItemCategoryId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ItemCategoryId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@await Html.PartialAsync("_MovePagePartial", ViewData["PageDetails"])
