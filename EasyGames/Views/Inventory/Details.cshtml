@model EasyGames.Models.InventoryDetailViewModel

@{
    ViewData["Title"] = "Details";
}

<div class="mb-3 d-flex align-items-center justify-content-between">
    <h1>Inventory Details</h1>
    <a asp-route-shopId="@Model.ShopId" asp-action="Index" class="btn btn-secondary">Back</a>
</div>

<div class="row g-3 justify-content-between">
    <div class="col-lg-6 card">
        <div class="card-body d-flex flex-column justify-content-between">
            <div>
                <div class="mb-4">
                    <h2 class="card-title">@Model.Item?.Name</h2>
                    <h3 class="card-subtitle text-muted">@Model.Shop?.ShopName</h3>
                </div>

                <dl class="row mb-0 g-1">
                    <dt class="col-5">Buy Price</dt>
                    <dd class="col-7">@Model.Item?.BuyPrice.ToString("C")</dd>

                    <dt class="col-5">Sell Price</dt>
                    <dd class="col-7">@Model.SellPrice.ToString("C")</dd>

                    <dt class="col-5">Stock</dt>
                    <dd class="col-7">@Model.Quantity</dd>
                </dl>
            </div>
            <div class="d-flex justify-content-end">
                <a asp-route-shopId="@Model.ShopId" asp-action="Edit" asp-route-id="@Model.InventoryId"
                    class="btn btn-outline-primary me-2">Edit</a>
                <a asp-route-shopId="@Model.ShopId" asp-action="Delete" asp-route-id="@Model.InventoryId"
                    class="btn btn-outline-danger">Delete</a>
            </div>
        </div>
    </div>

    <div class="col-lg-5 row row-cols-1 g-2">
        <div class="col">
            <div class="card text-center">
                <div class="card-body">
                    <small class="text-muted">Total Units Sold</small>
                    <div class="fs-4 fw-bold">@Model.TotalUnitsSold</div>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card text-center">
                <div class="card-body">
                    <small class="text-muted">Revenue</small>
                    <div class="fs-4 fw-bold">@Model.Revenue.ToString("C")</div>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card text-center">
                <div class="card-body">
                    <small class="text-muted">Profit</small>
                    <div class="fs-4 fw-bold">@Model.ProfitGenerated.ToString("C")</div>
                </div>
            </div>
        </div>
    </div>
</div>
