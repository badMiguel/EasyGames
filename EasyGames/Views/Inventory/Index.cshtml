@model IEnumerable<EasyGames.Models.InventoryDetailViewModel>

@{
    ViewData["Title"] = "Inventory List";
}

<div class="mb-3 d-flex align-items-center justify-content-between">
    <div>
        <h1 class="mb-0">@ViewData["ShopName"] Inventory</h1>
        <small class="text-muted">Items available in this shop</small>
    </div>

    <div class="d-flex gap-2">
        <a asp-controller="Shop" asp-action="Index" class="btn btn-outline-secondary">Back to Shop List</a>
        <a asp-action="Create" asp-route-shopId="@ViewData["ShopId"]" class="btn btn-primary">Create New</a>
    </div>
</div>

<table class="table table-hover align-middle">
    <thead class="table-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Item)
            </th>
            <th class="text-end">
                @Html.DisplayNameFor(model => model.Revenue)
            </th>
            <th class="text-end">
                @Html.DisplayNameFor(model => model.ProfitGenerated)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th class="scope-col text-end">Actions</th>
        </tr>
    </thead>
    <tbody>
    @if (!Model?.Any() ?? true)
    {
        <tr>
            <td colspan="5">
                <div class="card border-0 bg-light p-3 mb-0">
                    <div class="card-body text-center">
                        <div class="h5 mb-1">No inventory items</div>
                        <p class="mb-0 text-muted">Use <strong>Create New</strong> to add the first item.</p>
                    </div>
                </div>
            </td>
        </tr>
    }
    else
    {
    foreach (var item in Model) 
    {
        <tr>
            <td>
                <div class="d-flex flex-column">
                    <div class="fw-semibold">@item.Item?.Name"</div>
                    <small class="text-muted">@item.Item?.Description</small>
                </div>
            </td>
            <td class="text-end">
                @Html.DisplayFor(modelItem => item.Revenue)
            </td>
            <td class="text-end">
                @Html.DisplayFor(modelItem => item.ProfitGenerated)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td class="text-end">
                <a class="btn btn-sm btn-outline-primary" asp-route-shopId="@item.ShopId" asp-action="Edit" asp-route-id="@item.InventoryId">Edit</a>
                <a class="btn btn-sm btn-outline-info" asp-route-shopId="@item.ShopId" asp-action="Details" asp-route-id="@item.InventoryId">Details</a>
                <a class="btn btn-sm btn-outline-danger" asp-route-shopId="@item.ShopId" asp-action="Delete" asp-route-id="@item.InventoryId">Delete</a>
            </td>
        </tr>
    }}
    </tbody>
</table>
