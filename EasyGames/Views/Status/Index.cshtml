@model EasyGames.Models.AccountStatusViewModel
@{
    ViewData["Title"] = "My Account";
}

<div class="container mt-5" style="max-width: 900px;">
    <h1 class="mb-4">My Account</h1>

    <div class="row g-3 mb-4">
        <div class="col-md-6">
            <div class="card shadow-sm p-4 h-100">
                <h5 class="mb-2">Total Points</h5>
                <div class="display-6 text-primary fw-bold">@Model.Points</div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-sm p-4 h-100">
                <h5 class="mb-2">Tier</h5>
                <div class="h2 fw-bold text-success">@Model.Tier</div>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-2">
        <h4 class="mb-0">Recent Purchases</h4>
        <a class="btn btn-outline-dark" asp-controller="Account" asp-action="Transactions">
            View Full Transaction History
        </a>
    </div>
    <hr />

    @if (Model.RecentOrders != null && Model.RecentOrders.Any())
    {
        foreach (var order in Model.RecentOrders)
        {
            <div class="mb-4">
                <div class="d-flex justify-content-between">
                    <div class="fw-bold">Order #@order.OrderId</div>
                    <div class="text-muted">@order.OrderDate?.ToString("dd MMM yyyy, h:mm tt")</div>
                </div>
                <ul class="mt-2">
                    @foreach (var item in order.OrderItems)
                    {
                        <li>
                            <span>@item.Inventory.Item.Name</span> — <span>x@item.Quantity</span>
                        </li>
                    }
                </ul>
            </div>
            <hr />
        }
    }
    else
    {
        <p class="text-muted">No recent purchases.</p>
    }
</div>
