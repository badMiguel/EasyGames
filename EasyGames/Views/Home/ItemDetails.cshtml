@model EasyGames.Models.ItemDetails
@using System.Security.Claims

@{
    ViewData["Title"] = "Shop";
    var currentUserId = User.FindFirstValue(ClaimTypes.NameIdentifier);
}

<div class="d-flex gap-5 mb-5">
    <img src="~/images/image.jpg" class="img-fluid" style="width: 25rem;" alt="" />
    <div class="flex-grow-1">
        <h1>@Model.Item.Name</h1>
        <div class="d-flex justify-content-between align-items-center">
            <p class="lh-1">AU$@Model.Item.SellPrice</p>
            <div class="d-flex gap-2">
                <div class="d-flex">
                    @for (int i = 0; i < 5; i++)
                    {
                        if (i < Model.Rating) 
                        {
                            if (Model.Rating < i + 0.5) 
                            {
                                <i class="fa-solid fa-star-half-stroke text-warning"></i>
                            } else {
                                <i class="fa-solid fa-star text-warning"></i>
                            }
                        } else {
                            <i class="fa-regular fa-star text-secondary"></i>
                        }
                    }
                </div>
                <p class="lh-1">@Model.Rating.ToString("0.00")</p>
                <p class="lh-1">(@Model.RatingCount)</p>
            </div>
        </div>
        <p>Production Date: @Model.Item.ProductionDate.ToString("yyyy-MM-dd")</p>
        <p>Stock Left: @Model.Inventory.Quantity</p>
        @{
        if (User.Identity?.IsAuthenticated ?? false) {
            <form asp-controller="Cart" method="POST" class="d-flex gap-3 mt-5">
                <input type="hidden" asp-for="@Model.ItemId" />
                <input type="hidden" asp-for="@Model.Inventory.InventoryId" />

                <div class="flex-grow-1">
                    <label for="quantity" class="form-label">Quantity</label>
                    <input type="number" class="form-control" id="quantity" name="quantity" value="1" min="1" max="@Model.Inventory.Quantity">
                </div>

                @if (Model.Inventory.Quantity < 1)
                {   
                    <input type="submit" value="Add To Cart" formaction="/Cart/AddToCart" class="disabled btn btn-outline-primary btn-lg" />
                    <input type="submit" value="Buy Now" formaction="/Cart/BuyNow" class="disabled btn btn-primary btn-lg" />
                }
                else 
                {
                    <input type="submit" value="Add To Cart" formaction="/Cart/AddToCart" class="btn btn-outline-primary btn-lg" />
                    <input type="submit" value="Buy Now" formaction="/Cart/BuyNow" class="btn btn-primary btn-lg" />
                }
            </form>
        } 
        else
        {
            <p class="fst-italic">
                Please 
                <a asp-area="Identity" asp-page="/Account/Login" class="text-dark">login</a>
                to start buying items.
            </p>
        }
        }
    </div>
</div>

<h3 class="mb-5">Description</h3>
<p>@Model.Item.Description</p>


<!-- UI FOR LEAVE A REVIEW PART IS GENERATED WITH AI ASSISTANCE--> 
@if (User.Identity?.IsAuthenticated ?? false)
{
    if (!(ViewData["UserReviewed"] as bool? ?? false))
    {
        <h4 class="mt-5">Leave a Review</h4>
        <form asp-controller="Review" asp-action="Add" method="post" class="mt-3">
            <input type="hidden" asp-for="Item.ItemId" name="ItemId" />

            <!-- Star Rating -->
            <div class="mb-3">
                <label class="form-label d-block">Rating</label>
                <div class="star-rating" style="font-size: 1.5rem; cursor: pointer;">
                    @for (int i = 1; i <= 5; i++)
                    {
                        <i class="fa-regular fa-star text-secondary" 
                           data-value="@i"></i>
                    }
                </div>
                <input type="hidden" id="starRating" name="StarRating" required />
            </div>

            <!-- Review Comment -->
            <div class="mb-3">
                <label for="comment" class="form-label">Your Review</label>
                <textarea class="form-control" id="comment" name="Comment" rows="3"></textarea>
            </div>

            <button type="submit" class="btn btn-primary">Submit Review</button>
        </form>

        <script>
            document.addEventListener("DOMContentLoaded", function () {
                const stars = document.querySelectorAll(".star-rating i");
                const ratingInput = document.getElementById("starRating");

                stars.forEach(star => {
                    star.addEventListener("click", function () {
                        const rating = this.getAttribute("data-value");
                        ratingInput.value = rating;

                        // Reset all stars
                        stars.forEach(s => s.classList.remove("fa-solid", "text-warning"));
                        stars.forEach(s => s.classList.add("fa-regular", "text-secondary"));

                        // Highlight selected stars
                        for (let i = 0; i < rating; i++) {
                            stars[i].classList.remove("fa-regular", "text-secondary");
                            stars[i].classList.add("fa-solid", "text-warning");
                        }
                    });
                });
            });
        </script>
    }
}
else
{
    <p class="fst-italic mt-3">
        Please 
        <a asp-area="Identity" asp-page="/Account/Login" class="text-dark">log in</a>
        to leave a review.
    </p>
}


<h3 class="mt-5">Reviews</h3>
@foreach (var review in Model.Reviews) 
{
    <div class="mb-4">
        <div class="d-flex gap-2">
            <div> 
                @for (int i = 0; i < 5; i++)
                {
                    if (i < review.StarRating) 
                    {
                        if (review.StarRating < i + 0.5) 
                        {
                            <i class="fa-solid fa-star-half-stroke text-warning"></i>
                        } else {
                            <i class="fa-solid fa-star text-warning"></i>
                        }
                    } else {
                        <i class="fa-regular fa-star text-secondary"></i>
                    }
                }
            </div>
            <p class="mb-0">@review.StarRating</p>
        </div>
        <p class="mb-0">@review.Comment</p>
        <p class="text-secondary fst-italic">- Reviewed by @Model.Reviewers[review.UserId]</p>
        @if (review.UserId == currentUserId) 
        {
            <div class="d-flex gap-3">
                <a asp-controller="Review" asp-action="Delete" asp-route-reviewId="@review.ReviewId" asp-route-itemId="@Model.ItemId" class="text-decoration-none text-secondary">Delete</a> 
            </div>
        }   
    </div>
}

@if (Model.Reviews.Count() <= 0) 
{
    <p>There are currently no reviews yet for this item</p>
}
